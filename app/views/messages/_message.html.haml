.Message-list__content{data: {message: {id: message.id}}}
  .Message-info
    .Message-info__user-name
      = message.user.name
    .Message-info__date
      = message.created_at.strftime("%Y年%m月%d日　%H時%M分")
  .Message-list__files
    - if message.body.present?
      %p.message
        = message.body
    = image_tag message.image.url, class: 'image' if message.image.present?